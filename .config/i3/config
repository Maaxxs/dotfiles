        #
        focused_workspace #009a59 #009a59 #ffffff
    }
    # status_command while ~/.dotfiles/.config/i3/status.sh; do sleep 1; done

    separator_symbol ":|:"
    status_command i3status

    # font pango:Noto Sans Mono 10
}


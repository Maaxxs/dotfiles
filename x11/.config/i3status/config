memory {
    format = "mem %used"
    threshold_degraded = "10%"
    format_degraded = "MEMORY < %free"
}

cpu_usage {
    format = "cpu %usage"
}

cpu_temperature 0 {
    format = "cpu %degreesÂ°C"
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon*/temp1_input"
}


general {
        colors = true
        color_good = "#FFFFFF"
        color_degraded = "#FFFFFF"
        color_bad = "#FF0000"
        interval = 5
        markup = pango
}

# order += "ipv6"
order += "read_file reboot_required"
order += "read_file pkg_updates"
order += "wireless _first_"
order += "ethernet _first_"
order += "path_exists VPN"
order += "path_exists hses"
order += "disk /"
order += "disk /home"
order += "memory"
# order += "load"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "read_file brightness"
order += "volume master"
order += "battery all"
order += "tztime local"
order += "read_file scratchpad"


read_file reboot_required {
	format = "%content"
	path = "~/.config/i3status/reboot_required"
}

read_file pkg_updates {
    # format = "%title: %content"
    # format = "ï› %content"
    format = "ğŸ“¦ %content"
    path = "~/.config/i3status/pkg_updates"
}

read_file brightness {
    format = "ïƒ« %content"
    path = "~/.config/i3status/brightness"
}

wireless _first_ {
        format_up = "ï‡« %quality %essid"
        format_down = ""
}

ethernet _first_ {
        format_up = "â‡† %ip"
        format_down = ""

        # format_up = "E: %ip (%speed)"
        #format_down = "â›”E: down"
}

path_exists VPN {
    color_good = "#00FF00"
    format = "vpn wg"
    format_down = ""
    path = "/proc/sys/net/ipv4/conf/wg0"
}

path_exists hses {
    color_good = "#00FF00"
    format = "vpn hses"
    format_down = ""
    path = "/proc/sys/net/ipv4/conf/tun0"
}

battery all {
    # 2023-09-06: "full battery" meant 88%
    last_full_capacity = true
    format = "%status %percentage %remaining"
    format_percentage = "%2.f%s"
    format_down = ""
    # format = "%percentage %remaining"
    status_chr = "âš¡"
    status_unk = "âš¡"
    status_bat = "ğŸ”‹"
    # status_unk = "?"
    status_full = "â˜»"
    threshold_type = "percentage"
    low_threshold = "10"
}


disk "/" {
        format = "disk %avail"
}

disk "/home" {
        format = "home %avail"
}


load {
        format = "%1min"
}


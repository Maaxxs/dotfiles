memory {
    format = "mem %used"
    threshold_degraded = "10%"
    format_degraded = "MEMORY < %free"
}

cpu_usage {
    format = "cpu %usage"
}

cpu_temperature 0 {
    format = "cpu %degrees¬∞C"
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon5/temp1_input"
}

volume master {
   device = "pulse"
   format = "üîä %volume"
   format_muted = "üîá %volume"
}

tztime local {
        format = "%a %Y-%m-%d %H:%M"
}

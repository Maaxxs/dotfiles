general {
        colors = true
        color_good = "#FFFFFF"
        color_degraded = "#FFFFFF"
        color_bad = "#FF0000"
        interval = 5
}

# order += "ipv6"
order += "read_file pkg_updates"
order += "wireless _first_"
order += "ethernet _first_"
order += "path_exists VPN"
order += "disk /"
order += "disk /home"
order += "memory"
# order += "load"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "read_file brightness"
order += "volume master"
order += "battery all"
order += "tztime local"


read_file pkg_updates {
    # format = "%title: %content"
    format = "Ôçõ %content"
    path = "~/.config/i3status/pkg_updates"
}

read_file brightness {
    format = "ÔÉ´ %content"
    path = "~/.config/i3status/brightness"
}

wireless _first_ {
        format_up = "wlan %quality %essid"
        format_down = ""
}

ethernet _first_ {
        format_up = "‚áÜ %ip"
        format_down = ""

        # format_up = "E: %ip (%speed)"
        #format_down = "‚õîE: down"
}

path_exists VPN {
    color_good = "#00FF00"
    format = "vpn on"
    format_down = ""
    path = "/proc/sys/net/ipv4/conf/wg0"
}

battery all {
        format = "%status %percentage %remaining"
        format_percentage = "%2.f%s"
        format_down = ""
        # format = "%percentage %remaining"
        status_chr = "‚ö°"
        status_unk = "‚ö°"
        status_bat = "üîã"
        # status_unk = "?"
        status_full = "‚òª"
        threshold_type = "percentage"
        low_threshold = "10"
}


disk "/" {
        format = "disk %avail"
}

disk "/home" {
        format = "home %avail"
}


load {
        format = "%1min"
}

